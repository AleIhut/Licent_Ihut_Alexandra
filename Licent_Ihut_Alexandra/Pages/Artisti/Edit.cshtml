@page
@model Licent_Ihut_Alexandra.Pages.Artisti.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color: #66A1A8 ;font-style:italic ; text-align:center">Aici poți să îți editezi propria ta afacere.  </h1>

<h4 style="color: black ; text-align:center"> Momente artistice </h4>
<hr />
<div class="row" style="margin:50px">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Artist.ID" />
            <div class="form-group">
                <label asp-for="Artist.Nume" class="control-label"></label>
                <input asp-for="Artist.Nume" class="form-control" />
                <span asp-validation-for="Artist.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.JudetID" class="control-label">Județ</label>
                <select asp-for="Artist.JudetID" class="form-control" asp-items="ViewBag.JudetID"></select>
                <span asp-validation-for="Artist.JudetID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.LocalitateID" class="control-label">Adresă</label>
                <select asp-for="Artist.LocalitateID" class="form-control" asp-items="ViewBag.LocalitateID"></select>
                <span asp-validation-for="Artist.LocalitateID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.FisierImagine" class="control-label">Imagine</label>
                <input asp-for="Artist.FisierImagine" class="form-control" />
                <span asp-validation-for="Artist.FisierImagine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.CategorieMomentArtistic" class="control-label"></label>
                <input asp-for="Artist.CategorieMomentArtistic" class="form-control" />
                <span asp-validation-for="Artist.CategorieMomentArtistic" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.Telefon" class="control-label"></label>
                <input asp-for="Artist.Telefon" class="form-control" />
                <span asp-validation-for="Artist.Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.Email" class="control-label"></label>
                <input asp-for="Artist.Email" class="form-control" />
                <span asp-validation-for="Artist.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.Descriere" class="control-label"></label>
                <input asp-for="Artist.Descriere" class="form-control" />
                <span asp-validation-for="Artist.Descriere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Artist.MembruID" class="control-label">Nume membru</label>
                <select asp-for="Artist.MembruID" class="form-control" asp-items="ViewBag.MembruID"> </select>
                <span asp-validation-for="Artist.MembruID" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input style="color: #66A1A8; background-color: black ; border-color: black; text-decoration: none" type="submit" value="Salvează" class="btn btn-primary" />
            </div>
            <div>
                <a asp-page="Index" style="color: #66A1A8;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Înapoi la listă </a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
