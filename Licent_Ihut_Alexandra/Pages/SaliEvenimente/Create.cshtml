@page
@model Licent_Ihut_Alexandra.Pages.SaliEvenimente.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 style="color: moccasin ;font-style:italic ">Promovează aici sala ta de evenimente!</h1>

<h4 style=" color: black">Crează-i profilul chiar acum!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SalaEveniment.Nume" class="control-label"></label>
                <input asp-for="SalaEveniment.Nume" class="form-control" />
                <span asp-validation-for="SalaEveniment.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaEveniment.JudetID" class="control-label">Județ</label>
                <select asp-for="SalaEveniment.JudetID" class="form-control" asp-items="ViewBag.JudetID"> </select>
                @*<input asp-for="SalaEveniment.Judet" class="form-control"  />*@
                <span asp-validation-for="SalaEveniment.JudetID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaEveniment.LocalitateID" class="control-label">Adresa</label>
                <select asp-for="SalaEveniment.LocalitateID" class="form-control" asp-items="ViewBag.LocalitateID"> </select>
               @* <input asp-for="SalaEveniment.Localitate" class="form-control" />*@
                <span asp-validation-for="SalaEveniment.LocalitateID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaEveniment.FisierImagine" class="control-label"></label>
                <input asp-for="SalaEveniment.FisierImagine" class="form-control" />
                <span asp-validation-for="SalaEveniment.FisierImagine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaEveniment.Capacitate" class="control-label"></label>
                <input asp-for="SalaEveniment.Capacitate" class="form-control" />
                <span asp-validation-for="SalaEveniment.Capacitate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaEveniment.Telefon" class="control-label"></label>
                <input asp-for="SalaEveniment.Telefon" class="form-control" />
                <span asp-validation-for="SalaEveniment.Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaEveniment.Email" class="control-label"></label>
                <input asp-for="SalaEveniment.Email" class="form-control" />
                <span asp-validation-for="SalaEveniment.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalaEveniment.Descriere" class="control-label"></label>
                <input asp-for="SalaEveniment.Descriere" class="form-control" />
                <span asp-validation-for="SalaEveniment.Descriere" class="text-danger"></span>
            </div>
            <div class="form-group" >
                <input style="color: #66A1A8; background-color: black ; border-color: black; text-decoration: none" type="submit" value="Crează o nouă sală" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index"  style="color: #66A1A8;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Înapoi la listă </a>
   @* <a asp-page="Index">Back to List</a>*@
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
