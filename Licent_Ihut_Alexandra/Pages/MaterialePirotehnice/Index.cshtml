                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Descriere)
            </th>*@
            <th></th>
            <th></th>
                    <th></th>
                    <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MaterialePirotehnice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Judet.Nume)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localitate.NumeLocalitate)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>*@
                <th>
                        <th>
                                @if (User.IsInRole("Prestator"))
                                {
                                <button class="btn btn-primary" style="background-color: black ; border-color: black ">
                                    <a asp-page="./Edit" asp-route-id="@item.ID" style="color: #66A1A8;  text-decoration: none">Editează</a>
                                </button>
                                }


                        </th>
                        <th>
                            <a asp-page="./Details" asp-route-id="@item.ID" style="color: #66A1A8;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Detalii</a>

                        </th>
                        <th>
                                @if (User.IsInRole("Prestator") || User.IsInRole("Admin"))
                                {
                                <button class="btn btn-primary" style="background-color: black ; border-color: black ">
                                    <a asp-page="./Delete" asp-route-id="@item.ID" style="color: #66A1A8 ; text-decoration: none">Șterge</a>
                                </button>
                                }
                        </th>
                </th>
        </tr>
}
    </tbody>
</table>
