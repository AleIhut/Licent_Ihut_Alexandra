@page
@model Licent_Ihut_Alexandra.Pages.MaterialePirotehnice.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: moccasin ;font-style:italic ">Momentele magice învăluie evenimentul tău!</h1>

<p>
    <a class="btn btn-primary" asp-page="Create" style="color: #66A1A8; background-color: black; text-decoration: none; border-color: black">Adaugă o înregistrare</a>
</p>
<p style="color: moccasin ;font-style:italic"> Caută aici în funcție de nume sau județ  </p>
    <form method="post" class="searchForm">
        <input type="text" name="searchString" />
        @* <input style="color: #66A1A8; background-color: black ; border-color: black; text-decoration: none" type="submit" value="Căutare" class="btn btn-primary" />*@
        <div>
            <a type="submit" style="color: #66A1A8;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Caută</a>
            <a asp-page="Index" style="color: #66A1A8;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Înapoi la listă </a>
        </div>
        </form>
        </br>
<table class="table" style="border: 1px solid">
    <thead>
        <tr>
            <th style ="border: 1px solid">
                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Nume)
            </th>
            <th style="border: 1px solid">
                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Judet)
            </th>
            <th style="border: 1px solid">
                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Localitate)
            </th>
            <th style="border: 1px solid">
                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Telefon)
            </th >
            <th style="border: 1px solid">
                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Email)
            </th >
           @* <th>
                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Descriere)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MaterialPirotehnic) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Judet.Nume)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localitate.NumeLocalitate)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>*@
                <th>

                    <a asp-page="./Edit" asp-route-id="@item.ID" style="color: #66A1A8;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Editează</a>
                    <a asp-page="./Details" asp-route-id="@item.ID" style="color: #66A1A8;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Detalii</a>
                    <a asp-page="./Delete" asp-route-id="@item.ID" style="color: #66A1A8;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Ștergere</a>
                </th>
        </tr>
}
    </tbody>
</table>
