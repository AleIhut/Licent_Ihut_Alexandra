<table class="table table-dark" >
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NumeSort" style="text-decoration: none; color: white">
                    @Html.DisplayNameFor(model => model.Sonorizare[0].Nume)  ⇧
                </a>
                <a asp-page="./Index" asp-route-sortOrder="@Model.NumeSortDesc" style="text-decoration: none; color: white">
                    @Html.DisplayNameFor(model => model.Sonorizare[0].Nume) ⇩
                </a>
