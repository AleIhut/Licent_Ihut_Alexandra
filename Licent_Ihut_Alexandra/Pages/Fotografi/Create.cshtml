@page
@model Licent_Ihut_Alexandra.Pages.Fotografi.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 style="color: moccasin ;font-style:italic ">Promovează aici talentul tău!</h1>

<h4 style=" color: black">Crează-ți profilul chiar acum!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Fotograf.Nume" class="control-label"></label>
                <input asp-for="Fotograf.Nume" class="form-control" />
                <span asp-validation-for="Fotograf.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fotograf.JudetID" class="control-label">Județ</label>
                <select asp-for="Fotograf.JudetID" class ="form-control" asp-items="ViewBag.JudetID"></select>
                <span asp-validation-for="Fotograf.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fotograf.LocalitateID" class="control-label">Adresă</label>
                <select asp-for="Fotograf.LocalitateID" class ="form-control" asp-items="ViewBag.LocalitateID"></select>
                <span asp-validation-for="Fotograf.Nume" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fotograf.FisierImagine" class="control-label"></label>
                <input asp-for="Fotograf.FisierImagine" class="form-control" />
                <span asp-validation-for="Fotograf.FisierImagine" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fotograf.Telefon" class="control-label"></label>
                <input asp-for="Fotograf.Telefon" class="form-control" />
                <span asp-validation-for="Fotograf.Telefon" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fotograf.Email" class="control-label"></label>
                <input asp-for="Fotograf.Email" class="form-control" />
                <span asp-validation-for="Fotograf.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fotograf.Descriere" class="control-label"></label>
                <input asp-for="Fotograf.Descriere" class="form-control" />
                <span asp-validation-for="Fotograf.Descriere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input style="color: peru; background-color: black ; border-color: black; text-decoration: none" type="submit" value="Crează o nouă înregistrare" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index" style="color: peru;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Înapoi la listă </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
