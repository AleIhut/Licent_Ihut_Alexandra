@page
@model Licent_Ihut_Alexandra.Pages.MaterialePirotehnice.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1 style="color: moccasin ;font-style:italic ">Momentele magice învăluie evenimentul tău!</h1>

<p>
    <a class="btn btn-primary" asp-page="Create" style="color: peru; background-color: black; text-decoration: none; border-color: black">Adaugă o înregistrare</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Judet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Localitate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Telefon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaterialPirotehnic[0].Descriere)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.MaterialPirotehnic) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Judet.Nume)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Localitate.NumeLocalitate)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefon)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
                <th>

                    <a asp-page="./Edit" asp-route-id="@item.ID" style="color: peru;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Editează</a>
                    <a asp-page="./Details" asp-route-id="@item.ID" style="color: peru;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Detalii</a>
                    <a asp-page="./Delete" asp-route-id="@item.ID" style="color: peru;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Ștergere</a>
                </th>
        </tr>
}
    </tbody>
</table>
