            </th>
          
            <th></th>
            <th></th>
                    <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SonorizareD.Sonorizari) {
            string selectedRow = "";
            if (item.ID == Model.SonorizareID) 
            { 
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
            <th>
                @Html.DisplayFor(modelItem => item.Nume)
            </th>
            @*<td>
                @Html.DisplayFor(modelItem => item.GenMuzical)
            </td>*@
            <th>
                @Html.DisplayFor(modelItem => item.Numar)
            </th>
               @* <th>
                    @Html.DisplayFor(modelItem => item.Membru.Nume)

            </th>*@
               
           <!-- <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
                  -->
                  <th>
                      @{
                          foreach (var category in item.SonorizareGenuriMuzicale) 
                          {
                              @category.GenMuzical.GenMuzicalNume <br/> 
                          }
                         }
                          </th>
            <th>
                
                                <a asp-page="./Edit" asp-route-id="@item.ID" style="color: #66A1A8;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Editează</a>
                              
                       
                
                        </th>
                        <th>
                            <a asp-page="./Details" asp-route-id="@item.ID" style="color: #66A1A8;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Detalii</a>
                            
                        </th>
                        <th>
                            <a asp-page="./Delete" asp-route-id="@item.ID" style="color: #66A1A8;  text-decoration: none"><button class="btn btn-primary" style="background-color: black ; border-color: black ">Ștergere</a>
                        
                        </th>
        </tr>
}
    </tbody>
