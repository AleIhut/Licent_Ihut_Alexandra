        <table class="table" style="border: 1px solid">
    <thead>
        <tr>
            <th style ="border: 1px solid">
                @Html.DisplayNameFor(model => model.MaterialePirotehnice[0].Nume)
            </th>
            <th style="border: 1px solid">
                @Html.DisplayNameFor(model => model.MaterialePirotehnice[0].Judet)
