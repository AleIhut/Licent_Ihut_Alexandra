@page
@model Licent_Ihut_Alexandra.Pages.Sonorizari.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sonorizare[0].Nume)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.Sonorizare[0].GenMuzical)
            </th>*@
            <th>
                @Html.DisplayNameFor(model => model.Sonorizare[0].Numar)
            </th>
            <!-- <th>
                @Html.DisplayNameFor(model => model.Sonorizare[0].Descriere)
            </th>
             -->
            <th>
                @Html.DisplayNameFor(model => model.Sonorizare[0].SonorizareGenuriMuzicale)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SonorizareD.Sonorizari) {
            string selectedRow = "";
            if (item.ID == Model.SonorizareID) 
            { 
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.GenMuzical)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Numar)
            </td>
           <!-- <td>
                @Html.DisplayFor(modelItem => item.Descriere)
            </td>
                  -->
                  <td>
                      @{
                          foreach (var category in item.SonorizareGenuriMuzicale) 
                          {
                              @category.GenMuzical.ID @: @category.GenMuzical.GenMuzicalNume <br/> 
                          }
                         }
                          </td>
            <td>

                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
